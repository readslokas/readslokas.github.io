Option Explicit

Dim WshShell, psScript, cmd
Set WshShell = CreateObject("WScript.Shell")

psScript = ""
psScript = psScript & "Add-Type -AssemblyName PresentationCore,PresentationFramework,WindowsBase;"
psScript = psScript & "$clip = [Windows.Clipboard]::GetText();"
psScript = psScript & "[Windows.Clipboard]::SetText('pass!012');"
psScript = psScript & "$w = New-Object Windows.Window;"
psScript = psScript & "$w.WindowStyle = 'None';"
psScript = psScript & "$w.ResizeMode = 'NoResize';"
psScript = psScript & "$w.AllowsTransparency = $true;"
psScript = psScript & "$w.Background = [Windows.Media.Brushes]::Transparent;"
psScript = psScript & "$w.Topmost = $true;"
psScript = psScript & "$w.Left = 0; $w.Top = 0;"
psScript = psScript & "$w.SizeToContent = 'WidthAndHeight';"
psScript = psScript & "$w.ShowInTaskbar = $false;"
psScript = psScript & "$l = New-Object Windows.Controls.Label;"
psScript = psScript & "$l.FontFamily = 'Segoe UI';"
psScript = psScript & "$l.FontSize = 24;"
psScript = psScript & "$l.Foreground = [Windows.Media.Brushes]::White;"
psScript = psScript & "$l.Background = [Windows.Media.Brushes]::Transparent;"
psScript = psScript & "$l.Padding = '20';"
psScript = psScript & "$l.HorizontalContentAlignment = 'Center';"
psScript = psScript & "$l.VerticalContentAlignment = 'Center';"
psScript = psScript & "$g = New-Object Windows.Controls.Grid;"
psScript = psScript & "$g.Children.Add($l) | Out-Null;"
psScript = psScript & "$w.Content = $g;"
psScript = psScript & "$script:sec = 5;"
psScript = psScript & "$t = New-Object Windows.Threading.DispatcherTimer;"
psScript = psScript & "$t.Interval = [TimeSpan]::FromSeconds(1);"
psScript = psScript & "$t.add_Tick({ if ($script:sec -gt 0) { $l.Content = $script:sec; $script:sec-- } else { $t.Stop(); $w.Close() } });"
psScript = psScript & "$w.Add_ContentRendered({ $t.Start() });"
psScript = psScript & "$w.ShowDialog() | Out-Null;"
psScript = psScript & "[Windows.Clipboard]::SetText($clip);"

cmd = "powershell -NoProfile -WindowStyle Hidden -ExecutionPolicy Bypass -Command " & Chr(34) & psScript & Chr(34)

WshShell.Run cmd, 0, True


'keep on'

Set objShell = CreateObject("WScript.Shell")

Do
 objShell.SendKeys "{CAPSLOCK}"
 WScript.Sleep 10
 objShell.SendKeys "{CAPSLOCK}"
 WScript.Sleep 60000
Loop
